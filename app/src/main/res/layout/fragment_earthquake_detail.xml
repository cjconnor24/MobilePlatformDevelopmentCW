<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EarthquakeDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/location_heading"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment"
            tools:text="Cumbernauld, North Lanarkshire" />

        <TextView
            android:id="@+id/datetime_heading"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            tools:text="5 days ago" />

        <!--POSSIBLE MAP HERE-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="21st February 2018" />

                <TextView
                    android:id="@+id/detail_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="541 Miles away" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/detail_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="-31.234" />

                <TextView
                    android:id="@+id/detail_lon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="32.665" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/detail_magnitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="5.0 Magniture" />

                <TextView
                    android:id="@+id/detail_depth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="23km depth" />

            </TableRow>
        </TableLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>